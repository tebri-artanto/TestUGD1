<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeAnctivity"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/tvShowPariwisata"
        android:textColor="@color/greenBtnColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:text="Show Pariwisata"
        android:fontFamily="@font/poppinsbold"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_note"
        android:layout_width="match_parent"
        android:layout_height="466dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="15dp"
        tools:listitem="@layout/activity_pariwisata_adapter" />

    <com.kusu.loadingbutton.LoadingButton
        android:id="@+id/button_create"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="560dp"
        android:backgroundTint="@color/greenBtnColor"
        android:text="Tambah Tempat Priwisata"
        android:textColor="@color/colorBackgroundAwal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</FrameLayout>